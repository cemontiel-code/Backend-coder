<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head') %>
</head>

<body class="p-5">
    <header>
        <%- include('../partials/header') %>
    </header>

    <main>
        <h1 class="display-3">ingrese sus datos</h1>
        <section class="container-flex m-1 mb-5">

            <form action="/productos" class="p-2">
                <div class="form-group">
                    <label for="name">nombre</label>
                    <input type="text" name="title" id="name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="surname">precio</label>
                    <input type="number" name="price" id="price" class="form-control">
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="buscar" class="btn btn-info">
                </div>
            </form>
        </section>

        <section class="container-flex">
            <h2 class="display-1 text-warning"> resultados</h2>
            <table class="table ">
                <thead>
                    <tr>
                        <th>nombre</th>
                        <th>precio</th>
                        <th>imagen</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>nombre</td>
                        <td>precio</td>
                        <td>img</td>
                    </tr>
                </tbody>
            </table>
        </section>
    </main>

    <footer>
        <%- include('../partials/footer') %>
    </footer>
